# ===== .env.example - Updated for UUID v7 Implementation =====

# DataStax Astra Configuration with UUID v7 Optimization
DATASTAX_TOKEN=your_astra_token_here
DATASTAX_API_ENDPOINT=https://your-database-id-region.apps.astra.datastax.com

# Application Settings
APP_NAME="WhatsApp MCP Server with UUID v7"
APP_VERSION="2.0.0"
APP_ENV="development"
DEBUG=true
LOG_LEVEL="INFO"

# UUID Configuration - Using UUID v7 for better performance
UUID_VERSION="v7"
UUID_NODE_ID=""  # Optional: specify node ID for UUID generation

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# gRPC Service Ports
GRPC_MCP_PORT=50052      # Main MCP service
GRPC_TONE_PORT=50053     # Tone analysis service  
GRPC_HEALTH_PORT=50051   # Health monitoring service

# AI/ML Configuration
SENTENCE_TRANSFORMERS_MODEL="all-MiniLM-L6-v2"
VECTOR_DIMENSION=384
EMBEDDING_CACHE_SIZE=1000  # Number of embeddings to cache

# Vector Database Configuration
VECTOR_SIMILARITY_THRESHOLD=0.6
MAX_SIMILAR_TONES=10
TONE_ANALYSIS_RETENTION_DAYS=90

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CONNECTION_POOL_SIZE=10
MAX_RETRIES=3

# Logging Configuration
LOG_FILE="grpc_server.log"
LOG_ROTATION_SIZE="100MB"
LOG_RETENTION_DAYS=30

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL_SECONDS=30
METRICS_COLLECTION_ENABLED=true
PERFORMANCE_MONITORING=true

# Security Settings (if needed)
# GRPC_TLS_ENABLED=false
# TLS_CERT_PATH=""
# TLS_KEY_PATH=""

# WhatsApp Integration (if applicable)
# WHATSAPP_API_TOKEN=""
# WHATSAPP_WEBHOOK_SECRET=""
# WHATSAPP_PHONE_NUMBER_ID=""

# Redis Configuration (optional for caching)
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_PASSWORD=""
# REDIS_DB=0

# Development & Testing
TEST_DATABASE_NAME="whatsapp_mcp_test"
ENABLE_DEBUG_ENDPOINTS=true
MOCK_WHATSAPP_RESPONSES=false

# Feature Flags
ENABLE_VECTOR_SIMILARITY=true
ENABLE_TONE_LEARNING=true
ENABLE_USER_PROFILING=true
ENABLE_CONVERSATION_CONTEXT=true
ENABLE_RELATIONSHIP_DETECTION=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Database Connection Settings
DB_CONNECTION_TIMEOUT=30
DB_MAX_CONNECTIONS=20
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY_SECONDS=5

# Vector Operations Tuning
VECTOR_BATCH_SIZE=50
EMBEDDING_GENERATION_TIMEOUT=10
SIMILARITY_SEARCH_LIMIT=100

# Conversation Management
MAX_CONVERSATION_HISTORY=100
CONVERSATION_TIMEOUT_HOURS=24
AUTO_ARCHIVE_DAYS=30

# Tone Analysis Settings
TONE_CONFIDENCE_THRESHOLD=0.7
MIN_MESSAGE_LENGTH_FOR_ANALYSIS=3
MAX_MESSAGE_LENGTH=1000

# Memory Management
MAX_MEMORY_USAGE_MB=2048
GARBAGE_COLLECTION_INTERVAL=300

# Backup & Recovery
AUTO_BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Experimental Features
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_EMOTION_DETECTION=true
ENABLE_PERSONALITY_INSIGHTS=false
ENABLE_PREDICTIVE_RESPONSES=false

# OpenTelemetry (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=""
# OTEL_SERVICE_NAME="whatsapp-mcp-server"
# OTEL_RESOURCE_ATTRIBUTES="service.version=2.0.0"